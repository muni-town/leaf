{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "module": "es2022",
        "declaration": true,
        "allowImportingTsExtensions": false,
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "rootDir": ".",
        "moduleResolution": "bundler"
    },
    "include": [
        "src",
        "cli",
        "../../gitignore/scripts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}